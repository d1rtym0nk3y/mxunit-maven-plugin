<project>
  <modelVersion>4.0.0</modelVersion>
   
  <groupId>test</groupId>
  <artifactId>test</artifactId>
  <version>0.1</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>


    <plugins>

      <plugin>
        <groupId>net.m0nk3y</groupId>
        <artifactId>maven-mxunit-plugin</artifactId>
        <executions>
          <execution>
            <phase>integration-test</phase>
            <goals>
              <goal>run-tests</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <server>localhost</server>
          <port>80</port>
          <outputdir>${project.build.directory}/mxunit</outputdir>
          <verbose>true</verbose>
          <runner>/tests/HttpAntRunner.cfc</runner>
          <path>/tests/unit</path>
          <recurse>true</recurse>
          <cfcpath>tests.unit</cfcpath>
        </configuration>
      </plugin>

    </plugins>
  </build>


  <repositories>

    <repository>
        <id>net.m0nk3y</id>
        <url>http://repo.m0nk3y.net/</url>
        <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
        </snapshots>
    </repository>    


  </repositories>

</project>